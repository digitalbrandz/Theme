{% stylesheet 'scss' %}
// responsive sizes
@mixin bp($point) {
  
  $bp-small: "(max-width: 350px)";
  $bp-mobile: "(max-width: 600px)";
  $bp-mobileup: "(min-width: 600px)";
  $bp-phablet: "(max-width: 1022px)";
  $bp-phabletup: "(min-width: 1022px)";
  $bp-tablet: "(max-width: 1280px)";
  $bp-tabletup: "(min-width: 1280px)";
  $bp-laptop: "(max-width: 1600px)";
  $bp-desktop: "(min-width: 1600px)";
  @if $point == desktop {
    @media #{$bp-desktop}  { @content; }
  }  
  @else if $point == laptop {
    @media #{$bp-laptop} { @content; }
  }
  @else if $point == tablet {
    @media #{$bp-tablet} { @content; }
  }
  @else if $point == tabletup {
    @media #{$bp-tabletup} { @content; }
  }
  @else if $point == phablet {
    @media #{$bp-phablet} { @content; }
  }
  @else if $point == phabletup {
    @media #{$bp-phabletup} { @content; }
  }
  @else if $point == mobile {
    @media #{$bp-mobile}  { @content; }
  }
  @else if $point == mobileup {
    @media #{$bp-mobileup} { @content; }
  }
  @else if $point == small {
    @media #{$bp-small}  { @content; }
  }

}

//color transition
@mixin transition($attribute, $duration) {
    -webkit-transition: $attribute $duration ease;
    -moz-transition: $attribute $duration ease;
    transition: $attribute $duration ease;
}

#shopify-section-FAQ {

.searchwrap {
  padding: 50px 0;
  @include bp(mobile) {
    background:none;
  }
  @include bp(mobile) {
    padding:0 0 30px 0; 
  }
  & .search-title {
    @include bp(mobile) {
      padding:0;
    }
    & h3 {
      font-family: 'MuliBlack';
      font-size: 43px;
      @include bp(mobile) {
        font-size: 21px;
        padding: 11px 0;
        margin-bottom: 13px;
      }
    }
    & h2 {
      font-family: 'Open Sans', sans-serif;
      font-size: 16px;
      font-weight: normal;
      text-align: center;
      @include bp(mobile) {
        font-size: 13px;
        line-height: 21px;
        max-width: 75%;
        margin: 0 auto;
      }
    }
  }
  & .searchform-wrap {
    position:relative;
    margin: 25px 0;
    & input[type=text] {
      border: none;
      box-shadow: none;
      padding: 30px 25px;
      font-family: 'Raleway';
      font-size: 22px;
      margin: 0px 0;
      border-radius: 7px;
      @include bp(mobile) {
        font-size: 18px;
        margin: 5px 0; 
      }
    }
    &:focus {
      border:none; 
      border-bottom: 1px solid rgba(0, 0, 0, 0.22);
      box-shadow:none;
    }
    & .searchhelp-results-wrap {
      display:none;
      opacity:0;
      z-index: 8889;
      list-style-type: none;
      width: 100%;
      margin: 0;
      padding: 0;
      left: 0;
      overflow: hidden;
      position: absolute;
      padding-left: .9375rem;
      padding-right: .9375rem;
      &.active {
        display:block;
        opacity:1;
        @include transition(opacity,0.3s);
      }
      & #searchhelp-results {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 7px;
        list-style: none;
        -webkit-box-shadow: 0px 4px 7px 0px rgba(0,0,0,0.1);
        box-shadow: 0px 4px 7px 0px rgba(0,0,0,0.1);
        & a {
          display: block;
          padding: 10px 20px;
          color: #000;
          font-weight: normal;
          &:hover {
            color: #11699a;
            font-weight: bold; 
          }
        }
      }
    }
  }
  & .popular-faq {
    margin-top: 30px;
    & h2 {
      font-family: 'Open Sans', sans-serif;
      color: rgba(255, 255, 255, 0.35);
      font-size: 26px;
      margin-bottom: 25px;
      text-align: center;
      @include bp(mobile) {
        font-size: 21px; 
      }
    }
  }
  & .cta-wrap {
    & a {
      font-weight: normal;
      text-transform: capitalize;
      padding: 20px 40px;
      display: inline-block;
      border-radius: 6px;
      font-size: 19px;
    }
  }
}



.popular-faq {
      & > div {   
        margin-bottom:30px;
      & > h3 {
        display: flex;
    justify-content: space-between;
     background: none;

    cursor: pointer;
    padding: 18px;
    border: none;
    text-align: left;
    outline: none;
    font-size: 19px;
    font-family: 'Open Sans', sans-serif;
            text-shadow: none;
        @include bp(phablet) {
            font-size: 15px;
    line-height: 1.6;
        }
        &:hover, &:active, &.ui-accordion-header-active {
        background: none;

    text-shadow: none;
        }
        &:after {
         content:'\f078';
         display:inline-block;
         text-align:right; 
         font-family:'FontAwesome'; 
              min-width: 75px;
        }
        &.ui-accordion-header-active {
          &:after {
          	content:'\f077';
          }
        }
      }
    }
   }



}
{% endstylesheet %}

