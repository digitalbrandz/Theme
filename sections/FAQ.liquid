    color:{{ section.settings.font_color }}59;
}
#shopify-section-FAQ .popular-faq>div>h3 {
    color:{{ section.settings.font_color }};
  border: 1px solid {{ section.settings.font_color }}57;
}
#shopify-section-FAQ .searchwrap .cta-wrap a {  
  background: {{ section.settings.button_background_color }};
  color: {{ section.settings.button_font_color }};
}
{% endstyle %}


<div class="searchwrap">
 <div class="row align-center">
  <div class="column large-7 search-title">
    <h3 class="text-center">Frequently Asked Questions</h3>
    <h2>Look up a Question, if we havent answered it you can email us</h2>
   </div>
 </div> 
  
  
{% comment %}  
  <div class="row align-center">
   <div class="column large-7 searchform-wrap">
 
<form id="searchform" class="search" action="/search?view=faq">
 <input type="hidden" name="type" value="article" />
  <input id="helpsearch" type="text" name="q" placeholder="start a question here..." value="{{ search.terms }}"  data-role="none" autocomplete="off" />
</form>

     
     
     <div id="searchhelp-results-wrap" class="searchhelp-results-wrap">
       <ul id="searchhelp-results">
  
       </ul>
     </div>
   </div>
 </div> 
{% endcomment %}  
  
<div class="row align-center popular-faq">
  <div class="large-7 column">
    <h2>Most Popular Questions</h2>
    
    
    
   <div data-role="accordion" data-collapsible="true" data-height-style="content" data-icons="" class="popular-faq">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'Faq' %}
          <div>
          <h3>{{ block.settings.title  }}</h3>
       <div>
         <p>
          {{ block.settings.answer }}
          </p>
       </div> 
      </div>
       {% endcase %}
    {% endfor %}
    </div>  
 
    
    
  </div>
</div> 
  
  
  <div class="row align-center cta-wrap">
    <div class="large-7 column text-right">
      <a data-transition="fade" href="{{ section.settings.url }}">email us</a>
    </div>
  </div>
</div>


  

