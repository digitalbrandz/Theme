{% style %}
.product-wrap .product-top .product-details .product-add .add {
  background: {{ section.settings.add_background_color }};
  color: {{ section.settings.add_font_color }};
}
.swatch .swatch-element input:checked+label {
    border-color: {{ section.settings.options_border_color }};
}
.product-wrap .product-top .product-details .product-add .ajaxified-cart-feedback {
    color: #000000;
}
.product-wrap .product-top .product-details .product-add .ajaxified-cart-feedback a {
  color: {{ section.settings.add_font_color }};
}
{% endstyle %}

