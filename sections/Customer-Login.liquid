{% style %}
#shopify-section-{{ section.id }} .customer-background {
background-color:{{ section.settings.background_color }};
{% capture backgroundimage %}{{ section.settings.background_image | img_url: '1024x1024' }}{% endcapture %}     
{% unless backgroundimage contains 'no-image' %}
background-image:url({{ section.settings.background_image | img_url: '1024x1024' }});
{% endunless %}
}

#shopify-section-{{ section.id }} .login-div h2 {
color:{{ section.settings.title_color }};
}

#shopify-section-{{ section.id }} .login-div .btn {
color:{{ section.settings.button_color }};
background-color:{{ section.settings.button_background_color }};
}

{% endstyle %}


<div class="row big-row">
	<div class="columns large-6 customer-background">

      
  
    </div>
  
  
  
  	<div class="columns large-6 login-div">
      <div>
      <h2>Customer Login</h2>
      {% form 'customer_login' %}
      {{ form.errors | default_errors }}
      <div id="login_email" class="clearfix input-group">
        
        <input type="email" value="" name="customer[email]" id="customer_email" class="large" size="30" onblur="checkInput(this)" />
        <label for="customer_email" class="login">Email Address</label>
      </div>
      {% if form.password_needed %}
      <div id="login_password" class="clearfix input-group">
          <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" onblur="checkInput(this)" />
          <label for="customer_password" class="login">Password</label>     
      </div>
      {% endif %}  
      <div class="action_bottom">
        <input class="btn" type="submit" value="Sign In" />
        <span class="note">or {{ 'Create an account' | customer_register_link }}</span>
      </div>
        
        <div id="forgot_password">
            <a href="/pages/forgot-password" >Forgot your password?</a>
          </div>
    {% endform %}
      </div>
  </div>
  
  
  
</div>  

{% schema %}
  {
    "name": "Customer Login",
    "settings": [{
       "id": "background_color",
       "type": "color",
       "label": "Background Color",
       "default": "#eee"
},
{
       "id": "background_image",
       "type": "image_picker",
       "label": "Background Image (Optional)"
},
{
   "type":      "header",
   "content":   "Font Color & Buttons"
},  
{
       "id": "title_color",
       "type": "color",
       "label": "Title Color",
       "default": "#000000"
},
{
       "id": "Button_color",
       "type": "color",
       "label": "Button Font Color",
       "default": "#FFFFFF"
},
{
       "id": "button_background",
       "type": "color",
       "label": "Button Background Color",
       "default": "#000000"
}
]
  }
{% endschema %}

{% stylesheet 'scss' %}

// responsive sizes
@mixin bp($point) {
  
  $bp-small: "(max-width: 350px)";
  $bp-mobile: "(max-width: 600px)";
  $bp-mobileup: "(min-width: 600px)";
  $bp-phablet: "(max-width: 1022px)";
  $bp-phabletup: "(min-width: 1022px)";
  $bp-tablet: "(max-width: 1280px)";
  $bp-tabletup: "(min-width: 1280px)";
  $bp-laptop: "(max-width: 1600px)";
  $bp-desktop: "(min-width: 1600px)";
  @if $point == desktop {
    @media #{$bp-desktop}  { @content; }
  }  
  @else if $point == laptop {
    @media #{$bp-laptop} { @content; }
  }
  @else if $point == tablet {
    @media #{$bp-tablet} { @content; }
  }
  @else if $point == tabletup {
    @media #{$bp-tabletup} { @content; }
  }
  @else if $point == phablet {
    @media #{$bp-phablet} { @content; }
  }
  @else if $point == phabletup {
    @media #{$bp-phabletup} { @content; }
  }
  @else if $point == mobile {
    @media #{$bp-mobile}  { @content; }
  }
  @else if $point == mobileup {
    @media #{$bp-mobileup} { @content; }
  }
  @else if $point == small {
    @media #{$bp-small}  { @content; }
  }

}

//color transition
@mixin transition($attribute, $duration) {
    -webkit-transition: $attribute $duration ease;
    -moz-transition: $attribute $duration ease;
    transition: $attribute $duration ease;
}


