    display: flex;
    position: absolute;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    z-index: 9;
     & svg {
       max-width: 70%;
    height: auto;
    max-height: 70%;
      & .triangle {
-webkit-transition: all 0.7s ease-in-out;
    stroke-dasharray: 240;
    stroke-dashoffset: 480;
    stroke: #fff;
    transform: translateY(0);
} 
     }  
	}
  } 
