				font-size: 13px;
				position: absolute;
				bottom: 10px;
				left: 10px;
				z-index: 4;
				display: flex;
				align-items: center;
				font-weight: normal;
				letter-spacing: 1px;
				pointer-events: none;
				@include transition(opacity, 0.3s);
				@include bp(mobile) {
					font-size: 9px;
				}
				& i {
					background: rgba(0, 0, 0, 0.61);
					padding: 7px 8px 2px;
					margin-right: 10px;
					border-radius: 100%;
                
                    display: inline-block;
					@include bp(mobile) {
                    
						padding: 4px 7px 1px;
						margin-right: 7px;
					}
					& svg {
						width: 21px;
						height: 100%;
						@include bp(phablet) {
							max-width: 20px;
						}
						& path {
							fill: #fff;
						}
					}
				}
			}
    & video {
        max-width: 100%;
      box-shadow: 1px 1px 20px rgba(0,0,0,0.48);
    }
            &.unmute {
            & .mute {
              opacity:0;
            }
          }
